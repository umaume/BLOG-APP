# デプロイ環境用の環境変数設定
# 本番環境に合わせて値を変更してください

# Rails設定
RAILS_ENV=production
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_TO_STDOUT=true

# データベース設定（PostgreSQL）
DATABASE_URL=postgresql://username:password@localhost:5432/blog_app_production

# キー管理
SECRET_KEY_BASE=your_very_long_secret_key_here_replace_with_actual_key

# メール設定（必要に応じて）
MAILER_URL=https://your-domain.com
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis設定（必要に応じて）
REDIS_URL=redis://localhost:6379/0

# アップロード設定
ACTIVE_STORAGE_SERVICE=local

# Render固有の設定
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com