<% content_for :title, "タグ一覧" %>

<div class="max-w-6xl mx-auto">
  <div class="mb-8">
    <h1 class="font-bold text-4xl text-gray-900 mb-4">タグ一覧</h1>
    <p class="text-gray-600">タグ別に記事を探してみましょう</p>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <% @tags.each do |tag| %>
      <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow p-4">
        <%= link_to tag_path(tag), class: "block text-center" do %>
          <div class="mb-3">
            <span class="inline-flex items-center px-3 py-2 rounded-full text-sm font-medium text-white" style="background-color: <%= tag.color %>">
              #<%= tag.name %>
            </span>
          </div>
          
          <div class="text-sm text-gray-500">
            <%= tag.posts_count %>件の記事
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <% if @tags.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg">タグがまだ作成されていません。</p>
    </div>
  <% end %>
</div>