<% content_for :title, "Edit Profile" %>

<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">プロフィール編集</h1>

    <%= form_with(model: @user, local: true, class: "space-y-6", data: { controller: "avatar-preview" }) do |form| %>
      <% if @user.errors.any? %>
        <div id="error_explanation" class="bg-red-50 text-red-500 px-4 py-3 rounded-md">
          <h2 class="font-medium mb-2"><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h2>
          <ul class="list-disc ml-6">
            <% @user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :name, "名前", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, class: "mt-1 block w-full shadow-sm rounded-md border-gray-300 focus:border-blue-500 focus:ring-blue-500", placeholder: "山田太郎" %>
      </div>

      <div>
        <%= form.label :bio, "自己紹介（オプション）", class: "block text-sm font-medium text-gray-700" %>
        <%= form.textarea :bio, rows: 4, class: "mt-1 block w-full shadow-sm rounded-md border-gray-300 focus:border-blue-500 focus:ring-blue-500", placeholder: "自己紹介をどうぞ..." %>
        <p class="mt-1 text-sm text-gray-500">最大500文字</p>
      </div>

      <div>
        <%= form.label :website, "ウェブサイト（オプション）", class: "block text-sm font-medium text-gray-700" %>
        <%= form.url_field :website, class: "mt-1 block w-full shadow-sm rounded-md border-gray-300 focus:border-blue-500 focus:ring-blue-500", placeholder: "https://example.com" %>
      </div>

      <div>
        <%= form.label :avatar, "プロフィール画像（オプション）", class: "block text-sm font-medium text-gray-700" %>
        
        <!-- Current avatar display -->
        <div class="mt-2 mb-4">
          <div class="w-20 h-20 rounded-full overflow-hidden bg-gray-300 flex items-center justify-center border-2 border-gray-200">
            <% if @user.avatar.attached? %>
              <%= image_tag @user.avatar_thumbnail(160), alt: "現在のアバター", class: "w-full h-full object-cover", id: "current-avatar" %>
            <% else %>
              <span class="text-lg font-bold text-gray-600" id="avatar-placeholder"><%= @user.display_name.first.upcase %></span>
            <% end %>
          </div>
          <p class="mt-1 text-xs text-gray-500">現在のプロフィール画像</p>
        </div>

        <%= form.file_field :avatar, accept: "image/*", class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100", 
            data: { action: "change->avatar-preview#preview" } %>
        
        <!-- Preview container -->
        <div class="mt-3" id="avatar-preview-container" style="display: none;">
          <p class="text-sm text-gray-600 mb-2">新しい画像のプレビュー：</p>
          <div class="w-20 h-20 rounded-full overflow-hidden bg-gray-300 flex items-center justify-center border-2 border-blue-500">
            <img id="avatar-preview" class="w-full h-full object-cover" style="display: none;">
          </div>
        </div>

        <p class="mt-2 text-xs text-gray-500">
          JPG、PNG、GIF形式に対応。最大サイズ: 5MB
        </p>
      </div>

      <div class="flex space-x-4">
        <%= form.submit "プロフィールを更新", class: "flex-1 bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
        <%= link_to "キャンセル", @user, class: "flex-1 text-center bg-gray-300 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2" %>
      </div>
    <% end %>
  </div>
</div>