<% if resource.errors.any? %>
  <div id="error_explanation" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md mb-6" data-turbo-cache="false">
    <div class="flex items-start">
      <svg class="w-5 h-5 text-red-400 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
      </svg>
      <div class="flex-1">
        <h3 class="font-medium mb-2">
          <%= resource.errors.count %>件のエラーが発生しました：
        </h3>
        <ul class="list-disc ml-5 space-y-1">
          <% resource.errors.full_messages.each do |message| %>
            <li class="text-sm"><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
