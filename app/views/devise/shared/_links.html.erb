<div class="text-center space-y-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to t('devise.shared.links.already_have_account'), new_session_path(resource_name), class: "text-blue-600 hover:text-blue-500 text-sm" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t('devise.shared.links.no_account'), new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-500 text-sm" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <br>
    <%= link_to t('devise.shared.links.forgot_password'), new_password_path(resource_name), class: "text-gray-600 hover:text-gray-500 text-sm" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <br>
    <%= link_to t('devise.shared.links.no_confirmation'), new_confirmation_path(resource_name), class: "text-gray-600 hover:text-gray-500 text-sm" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <br>
    <%= link_to t('devise.shared.links.no_unlock'), new_unlock_path(resource_name), class: "text-gray-600 hover:text-gray-500 text-sm" %>
  <% end %>
</div>
