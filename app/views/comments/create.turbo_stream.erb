<%= turbo_stream.prepend "comments-list" do %>
  <%= render 'comments/comment', comment: @comment, post: @post, index: 0 %>
<% end %>

<%= turbo_stream.replace "comments-count" do %>
  <%= @post.comments.count %>
<% end %>

<%= turbo_stream.replace "comment-form-container" do %>
  <%= render 'comments/form', post: @post, comment: @post.comments.build %>
<% end %>

<%= turbo_stream.append "flash-messages" do %>
  <div data-controller="flash" 
       data-flash-timeout-value="3000"
       class="flash-message transform transition-all duration-500 ease-in-out translate-x-full opacity-0
              bg-green-50 border-l-4 border-green-400 text-green-700
              max-w-sm w-full shadow-lg rounded-md px-4 py-3 pointer-events-auto">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
      </div>
      <div class="ml-3 flex-1">
        <p class="text-sm font-medium">コメントを投稿しました</p>
      </div>
      <div class="ml-4 flex-shrink-0 flex">
        <button data-action="click->flash#dismiss" class="inline-flex text-gray-400 hover:text-gray-500">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
<% end %>