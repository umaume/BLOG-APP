<section id="comments-section" class="mt-6 sm:mt-8">
  <!-- Comments Header -->
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-lg sm:text-xl font-bold text-gray-900">
      <svg class="inline-block w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
      </svg>
      コメント (<span id="comments-count"><%= comments.count %></span>)
    </h3>
    
    <% if user_signed_in? %>
      <button id="toggle-comment-form" class="text-sm text-blue-600 hover:text-blue-700 font-medium">
        <svg class="inline-block w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        コメントを追加
      </button>
    <% end %>
  </div>

  <!-- Comment Form -->
  <%= render 'comments/form', post: post, comment: comment %>

  <!-- Comments List -->
  <div id="comments-list" class="space-y-4">
    <%= render 'comments/list', comments: comments, post: post %>
  </div>
</section>