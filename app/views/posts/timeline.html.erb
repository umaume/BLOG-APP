<% content_for :title, "Timeline" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl text-gray-900"><%= t('timeline.title') %></h1>
    <div class="flex space-x-2">
      <%= link_to t('navigation.all_posts'), posts_path, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium" %>
      <% if user_signed_in? %>
        <%= link_to t('navigation.new_post'), new_post_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
      <% end %>
    </div>
  </div>

  <div id="posts" class="space-y-6">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <article class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 rounded-full overflow-hidden bg-gray-300 flex items-center justify-center">
                <% if post.user.avatar.attached? %>
                  <%= image_tag post.user.avatar_thumbnail(80), alt: "#{post.user.display_name}のアバター", class: "w-full h-full object-cover" %>
                <% else %>
                  <span class="text-sm font-bold text-gray-600"><%= post.user.display_name.first.upcase %></span>
                <% end %>
              </div>
              <div>
                <p class="font-medium text-gray-900"><%= link_to post.user.display_name, post.user, class: "hover:text-blue-600" %></p>
                <p class="text-sm text-gray-500"><%= time_ago_in_japanese(post.created_at) %></p>
              </div>
            </div>
            <% if user_signed_in? && post.user == current_user %>
              <div class="flex space-x-2">
                <%= link_to t('actions.edit'), edit_post_path(post), class: "text-sm text-gray-600 hover:text-blue-600" %>
                <%= button_to t('actions.delete'), post, method: :delete, class: "text-sm text-red-600 hover:text-red-800", data: { turbo_confirm: t('posts.actions.confirm_delete') } %>
              </div>
            <% elsif user_signed_in? %>
              <%= render 'shared/follow_button', user: post.user %>
            <% end %>
          </div>
          
          <h2 class="text-xl font-bold mb-2">
            <%= link_to post.title, post, class: "text-gray-900 hover:text-blue-600" %>
          </h2>
          
          <!-- Category and Tags -->
          <% if post.category || post.tags.any? %>
            <div class="mb-3 flex flex-wrap items-center gap-1">
              <% if post.category %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium text-white" style="background-color: <%= post.category.color %>">
                  <%= post.category.name %>
                </span>
              <% end %>
              
              <% if post.tags.any? %>
                <% post.tags.limit(3).each do |tag| %>
                  <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium text-white" style="background-color: <%= tag.color %>">
                    #<%= tag.name %>
                  </span>
                <% end %>
                <% if post.tags.count > 3 %>
                  <span class="text-xs text-gray-500">+<%= post.tags.count - 3 %>個</span>
                <% end %>
              <% end %>
            </div>
          <% end %>
          
          <p class="text-gray-700 mb-4"><%= post.excerpt(200) %></p>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <%= render 'like_button', post: post %>
              <div class="flex items-center space-x-1 text-gray-500">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
                <span><%= post.comments.count %></span>
              </div>
            </div>
            <%= link_to t('posts.show.read_more'), post, class: "text-blue-600 hover:text-blue-800 font-medium" %>
          </div>
        </article>
      <% end %>


    <% else %>
      <div class="text-center py-12">
        <div class="mb-6">
          <svg class="w-16 h-16 mx-auto text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2"><%= t('timeline.empty_title') %></h3>
        <p class="text-gray-500 mb-4"><%= t('timeline.empty_description') %></p>
        <div class="space-x-4">
          <%= link_to t('timeline.discover_posts'), posts_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
          <span class="text-gray-400">•</span>
          <%= link_to t('timeline.write_first_post'), new_post_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
        </div>
      </div>
    <% end %>
  </div>
</div>