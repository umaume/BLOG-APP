<div id="<%= dom_id post %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= post.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Content:</strong>
    <%= post.content %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Author:</strong>
    <%= post.author %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Published:</strong>
    <%= post.published? ? "Yes" : "No" %>
  </div>
</div>
