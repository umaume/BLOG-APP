<article id="<%= dom_id post %>" class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow duration-200">
  <!-- Post Header -->
  <div class="flex items-start space-x-3 mb-4">
    <div class="w-10 h-10 rounded-full overflow-hidden bg-gray-300 flex items-center justify-center flex-shrink-0">
      <% if post.user.avatar.attached? %>
        <%= image_tag post.user.avatar_thumbnail(40), alt: "#{post.user.display_name}のアバター", class: "w-full h-full object-cover" %>
      <% else %>
        <span class="text-sm font-bold text-gray-600"><%= post.user.display_name.first.upcase %></span>
      <% end %>
    </div>
    <div class="flex-1 min-w-0">
      <div class="flex items-center space-x-2">
        <%= link_to post.user.display_name, post.user, class: "font-medium text-gray-900 hover:text-blue-600" %>
        <span class="text-gray-500">•</span>
        <span class="text-sm text-gray-500"><%= time_ago_in_words(post.created_at) %>前</span>
      </div>
      <% if post.category.present? %>
        <div class="mt-1">
          <%= link_to post.category.name, category_path(post.category), 
              class: "inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full hover:bg-blue-200 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Post Content -->
  <div class="mb-4">
    <h3 class="text-xl font-semibold mb-2 line-clamp-2">
      <%= link_to post.title, post, class: "text-gray-900 hover:text-blue-600 transition-colors" %>
    </h3>
    
    <div class="text-gray-700 mb-3 line-clamp-3">
      <%= post.excerpt(200) %>
    </div>

    <!-- Tags -->
    <% if post.tags.any? %>
      <div class="flex flex-wrap gap-1 mb-3">
        <% post.tags.limit(3).each do |tag| %>
          <%= link_to "##{tag.name}", tag_path(tag), 
              class: "inline-block bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded hover:bg-gray-200 transition-colors" %>
        <% end %>
        <% if post.tags.count > 3 %>
          <span class="text-xs text-gray-500">+<%= post.tags.count - 3 %>個のタグ</span>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Post Actions -->
  <div class="flex items-center justify-between pt-3 border-t border-gray-100">
    <div class="flex items-center space-x-4">
      <!-- Like Button -->
      <%= render 'posts/like_button', post: post %>

      <!-- Comments -->
      <%= link_to post, class: "flex items-center space-x-1 text-gray-500 hover:text-blue-600 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        <span class="text-sm"><%= post.respond_to?(:comments) ? post.comments.count : 0 %></span>
      <% end %>

      <!-- Share Button -->
      <button class="flex items-center space-x-1 text-gray-500 hover:text-green-600 transition-colors" 
              onclick="navigator.share ? navigator.share({title: '<%= j post.title %>', url: '<%= post_url(post) %>'}) : copyToClipboard('<%= post_url(post) %>')">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
        </svg>
        <span class="text-sm">共有</span>
      </button>
    </div>

    <!-- Read More -->
    <div class="text-right">
      <%= link_to "続きを読む", post, class: "text-blue-600 hover:text-blue-700 text-sm font-medium transition-colors" %>
    </div>
  </div>
</article>
