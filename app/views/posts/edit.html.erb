<% content_for :title, t('posts.edit.title') %>
<% add_breadcrumb "ホーム", root_path %>
<% add_breadcrumb "投稿一覧", posts_path %>
<% add_breadcrumb truncate(@post.title, length: 30), @post %>
<% add_breadcrumb "編集" %>

<div class="w-full max-w-4xl">
  <h1 class="font-bold text-2xl sm:text-3xl lg:text-4xl mb-6"><%= t('posts.edit.title') %></h1>

  <%= render "form", post: @post %>

  <div class="flex flex-col sm:flex-row gap-3 mt-4">
    <%= link_to t('actions.show'), @post, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-200 font-medium transition-colors" %>
    <%= link_to t('actions.back'), posts_path, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-200 font-medium transition-colors" %>
  </div>
</div>
